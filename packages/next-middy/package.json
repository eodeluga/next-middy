{
  "name": "next-middy",
  "version": "1.0.0",
  "description": "Full-featured Next.js middleware framework including schema validation powered by Zod.",
  "author": "Eugene Odeluga <eodeluga@users.noreply.github.com> (https://github.com/eodeluga)",
  "license": "MIT",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "sideEffects": false,
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "clean": "rm -rf dist ../../.tsbuildinfo/next-middy.tsbuildinfo",
    "prepublishOnly": "npm run build",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "next-middy-core": "*"
  },
  "peerDependencies": {
    "next": ">=13.0.0",
    "zod": ">=3.0.0"
  },
  "devDependencies": {
    "typescript": "^5.6.3",
    "vitest": "^2.1.3",
    "@types/node": "^22.7.5"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./zod": {
      "types": "./dist/zod/index.d.ts",
      "import": "./dist/zod/index.js"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/eodeluga/next-middy"
  },
  "bugs": {
    "url": "https://github.com/eodeluga/next-middy/issues"
  },
  "homepage": "https://github.com/eodeluga/next-middy#readme",
  "keywords": [
    "nextjs",
    "middleware",
    "zod",
    "validation",
    "typescript"
  ],
  "publishConfig": {
    "access": "public"
  }
}
